<div class="container-show">
  <div id="<%= dom_id event %>" class=" info-event">
    <p>
      <strong>Nombre del evento: </strong>
      <%= event.name %>
    </p>

    <p><!-- Muestra el organizador (nombre del usuario) -->   
      <strong>Organizado por: </strong>
      <%= "#{event.user.name} #{event.user.last_name}".camelcase %>
    </p>

    <p>
      <strong>Lugar: </strong>
      <%= event.place %>
    </p>

    <p>
      <strong>Fecha: </strong>
      <%= event.date %>
    </p>

    <p>
      <strong>Hora: </strong>
      <%= event.start_time.strftime("%H:%M") %> - <%= event.end_time.strftime("%H:%M") %>
    </p>

    <p>
      <strong>Descripci√≥n: </strong>
      <%= event.description %>
    </p>

    <p>
      <strong>Invitados: </strong>
      <%= event.guests.count %>
    </p>

    <!--<p>
      <strong>End time:</strong>
      <%= event.end_time %>
    </p>-->

  </div>

</div>
